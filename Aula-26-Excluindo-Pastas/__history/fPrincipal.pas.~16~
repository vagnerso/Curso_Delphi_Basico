{$R *.dfm}

procedure TfrmPrincipal.btnApagarPastaComArquivosClick(Sender: TObject);
begin

  if DirectoryExists('') then
  begin

    try
      TDirectory.Delete('', True); // O parâmetro "True" indica que o conteúdo da pasta será excluído
      ShowMessage('Pasta excluída com sucesso.');
    except
      on E: Exception do
        ShowMessage('Erro ao excluir a pasta: ' + E.Message);
    end;

  end
  else
  begin
    ShowMessage('A pasta não existe.');
  end;

end;

